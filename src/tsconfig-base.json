{
	"type": "module",
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

		"composite": true,
		"noImplicitReturns": true,
		"sourceMap": true,
		"alwaysStrict": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"resolveJsonModule": true,
		"removeComments": true
	},
	"include": [
	],
	"exclude": [
		"**/node_modules/*",
		"bin",
		"public"
	]
}